{
    "name": "server",
    "version": "1.0.0",
    "license": "MIT",
    "main": "index.ts",
    "scripts": {
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "dev": "cross-env NODE_ENV=development nodemon index.ts",
        "build": "mkdir -p ./dist && cp .env ./dist/.env && tsc -p ./tsconfig.json && tsc-alias -p ./tsconfig.json && yarn post-build",
        "build:docker": "mkdir -p ./dist && cp .env ./dist/.env && tsc -p ./tsconfig.json && tsc-alias -p ./tsconfig.json && yarn post-build",
        "post-build": "cp package.json ./dist/package.json && cp yarn.lock ./dist/yarn.lock && cd dist && env NODE_ENV=production yarn install",
        "test": "jest"
    },
    "dependencies": {
        "@babel/core": "^7.19.6",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-typescript": "^7.18.6",
        "@types/node-fetch": "2",
        "@types/sequelize": "^4.28.14",
        "@types/supertest": "^2.0.12",
        "babel-jest": "^29.2.2",
        "body-parser": "^1.20.0",
        "celebrate": "^15.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.2",
        "express": "^4.18.1",
        "mysql2": "^2.3.3",
        "node-fetch": "2",
        "nodemon": "^2.0.19",
        "sequelize": "^6.21.6",
        "strong-error-handler": "^4.0.0",
        "supertest": "^6.3.1",
        "umzug": "^3.2.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^29.2.1",
        "@types/node": "^18.7.17",
        "cross-env": "^7.0.3",
        "jest": "^29.2.2",
        "sequelize-mock": "^0.10.2",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.7.0",
        "tsconfig-paths": "^4.1.0",
        "tslint": "^6.1.3",
        "typescript": "^4.8.3"
    },
    "jest": {
        "rootDir": "./",
        "roots": [
            "<rootDir>",
            "<rootDir>/src/"
        ],
        "modulePaths": [
            "<rootDir>/",
            "<rootDir>/src/"
        ],
        "moduleDirectories": [
            "node_modules",
            "src"
        ]
    }
}
